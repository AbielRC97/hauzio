
@{
    ViewData["Title"] = "Ubicaciones";
}

<h1>Location</h1>
<div id='map'>
</div>
<style>
    #map {
        width: 100%;
        height: 580px;
        box-shadow: 5px 5px 5px #888;
    }
</style>

<script>
    var map = L.map('map')
        .setView([19.2087846, -96.2297964], 15);
    L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
        maxZoom: 19,
        attribution: '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>'
    }).addTo(map);
    L.control.scale().addTo(map);
    L.marker([19.2094864904331, -96.22941649521755], { draggable: true }).addTo(map).bindPopup('A pretty CSS popup.<br> Easily customizable.');
</script>